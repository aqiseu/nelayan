<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv_container_item_notif"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_marginBottom="@dimen/item_margin_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/item_margin_8">

            <TextView
                android:id="@+id/tv_notif_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="@string/label_fullname"
                android:fontFamily="@font/nunitosans_regular"/>

            <TextView
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="already transfered a deposit."/>

        </LinearLayout>



        <Button
            android:layout_weight="0.5"
            android:id="@+id/btn_detail_notif"
            android:fontFamily="@font/nunitosans_regular"
            android:text="Details"
            android:layout_width="0dp"
            android:textColor="@color/colorWhite"
            android:layout_height="30dp"
            android:background="@drawable/button_blue" />

    </LinearLayout>


</android.support.v7.widget.CardView>