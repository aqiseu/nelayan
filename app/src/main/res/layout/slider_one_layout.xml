<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc_slider">

    <ImageView
        android:id="@+id/img_slider_1"
        android:layout_width="@dimen/dp_270"
        android:layout_height="@dimen/dp_150"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_162"
        android:src="@drawable/fish" />

    <TextView
        android:textColor="@android:color/white"
        android:fontFamily="@font/nunitosans_bold"
        android:id="@+id/tv_slider_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_slider_1"
        android:textSize="@dimen/default_title_slider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_52"
        android:text="@string/welcome_screen" />


</RelativeLayout>