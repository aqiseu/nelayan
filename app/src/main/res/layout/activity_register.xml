<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.learn.dimdimasdim.bidfishnelayan.view.RegisterActivity">

    <include layout="@layout/view_header_logo"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_header"
            android:background="@drawable/bg_upload_photo">

            <ImageView
                android:id="@+id/img_register_upload_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_header"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/ic_register_add_photo_bid"
                android:src="@drawable/ic_add"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"/>


        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/til_email"
            android:textColorHint="@color/colorPrimaryLight"
            android:layout_marginBottom="@dimen/item_margin_8">

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_your_email"
                android:fontFamily="@font/nunitosans_regular"
                android:inputType="textEmailAddress"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/til_fullname"
            android:textColorHint="@color/colorPrimaryLight"
            android:layout_marginBottom="@dimen/item_margin_8">

            <EditText
                android:id="@+id/edt_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_fullname"
                android:fontFamily="@font/nunitosans_regular"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>


        <Spinner
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:id="@+id/edt_gender"
            android:gravity="center"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:drawSelectorOnTop="true"
            android:dropDownVerticalOffset="-53dp"
            android:spinnerMode="dropdown" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/til_address"
            android:textColorHint="@color/colorPrimaryLight"
            android:layout_marginBottom="@dimen/item_margin_8">

            <EditText
                android:id="@+id/edt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_address"
                android:fontFamily="@font/nunitosans_regular"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/til_Phone"
            android:textColorHint="@color/colorPrimaryLight"
            android:layout_marginBottom="@dimen/item_margin_8">

            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/label_phone_number"
                android:fontFamily="@font/nunitosans_regular"
                android:inputType="text"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/til_password"
            android:textColorHint="@color/colorPrimaryLight"
            app:passwordToggleEnabled="true"
            android:layout_marginBottom="@dimen/item_margin_8">

            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitosans_regular"
                android:hint="@string/label_your_password"
                android:inputType="textPassword"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="@dimen/width_button_general"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/item_margin_32"
            android:background="@drawable/bg_button_general"
            android:text="@string/label_register"
            android:fontFamily="@font/nunitosans_bold"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
