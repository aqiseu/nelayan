<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_container_item_bid"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/activity_vertical_padding"
    android:background="@drawable/bg_item_bid"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_margin_8">

    <ImageView
        android:id="@+id/img_bid_fish"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"/>

    <LinearLayout
        android:layout_toRightOf="@+id/img_bid_fish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_bid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_sample_name_fish"
            android:textColor="@color/colorPrimaryLight"
            android:fontFamily="@font/nunitoaans_bold"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_sample_name_fish"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="@dimen/item_margin_8"
            android:textSize="16sp"
            android:fontFamily="@font/nunitosans_regular"/>

        <TextView
            android:id="@+id/tv_location_bid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_location"
            android:textColor="@color/colorPrimaryLight"
            android:layout_marginTop="@dimen/item_margin_8"
            android:drawableLeft="@drawable/icon_location"
            android:drawablePadding="@dimen/item_margin_8"
            android:textSize="14sp"
            android:fontFamily="@font/nunitosans_italic"/>

    </LinearLayout>

</RelativeLayout>