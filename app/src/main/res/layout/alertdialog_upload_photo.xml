<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_padding">

    <Button
        android:id="@+id/btn_upload_from_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_from_camera"
        android:layout_marginBottom="@dimen/item_margin_32"/>

    <Button
        android:id="@+id/btn_upload_from_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_from_gallery"/>

</LinearLayout>