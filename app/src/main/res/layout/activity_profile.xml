<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.learn.dimdimasdim.bidfishnelayan.view.ProfileActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:id="@+id/usprofile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_launcher_background"
        app:civ_border_width="2dp"
        app:civ_border_color="@color/colorPrimaryLight"/>

    <TextView
        android:id="@+id/tv_usprofile_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_sample_fullname"
        android:layout_marginTop="@dimen/item_margin_8"
        android:fontFamily="@font/nunitosans_bold"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/item_margin_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deposito  :"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_usprofile_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40000"
                android:fontFamily="@font/nunitosans_bold"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"/>
        </LinearLayout>




        <Button
            android:id="@+id/btn_verify"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Verify Customer"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="10sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nunitosans_bold"
            android:background="@drawable/bg_button_accent"/>

</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer Details"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunitosans_regular"
        android:textColor="@color/colorPrimaryDark"
        />

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="@dimen/item_margin_8"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/item_margin_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email       :   "
                android:layout_gravity="left"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/tv_usprofile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_sample_email"
                android:layout_gravity="left"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/colorPrimaryDark"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/item_margin_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender    :   "
                android:layout_gravity="left"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/tv_usprofile_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_sample_email"
                android:layout_gravity="left"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/colorPrimaryDark"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/item_margin_8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address  :   "
                android:layout_gravity="left"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/tv_usprofile_addr"
                android:layout_width="260dp"
                android:layout_height="70dp"
                android:text="@string/label_sample_email"
                android:layout_gravity="left"
                android:fontFamily="@font/nunitosans_regular"
                android:textColor="@color/colorPrimaryDark"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:gravity="center"
                android:textSize="12sp"
                android:fontFamily="@font/nunitosans_regular"
                android:text="Customer is already transfered some deposit for auction, please check it kindly."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:layout_gravity="center"
                android:id="@+id/btn_see_receipt"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Transfer Receipt"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textSize="10sp"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/nunitosans_bold"
                android:background="@drawable/bg_button_accent"/>

        </LinearLayout>


    </LinearLayout>





</LinearLayout>
